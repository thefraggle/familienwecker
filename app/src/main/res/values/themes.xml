<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Familienwecker" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background -->
        <item name="windowSplashScreenBackground">@color/splash_screen_bg</item>

        <!-- Use your custom icon for the splash screen -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>

        <!-- Set the theme of the Activity that directly follows your splash screen -->
        <item name="postSplashScreenTheme">@style/Theme.Familienwecker</item>
    </style>
</resources>